<form action="/dreams/edit/<%=@dream.id%>" method="POST">
  <%if @message%>
    <div class="notification is-info">
      <%=@message%>
    </div>
  <% end %>

  <div class="field">
    <label class="label">Dream Descrition</label>
    <div class="control has-icons-left">
      <input class="input" name="description" type="text" value="<%=@dream.description%>">
      <span class="icon is-small is-left">
        <i class="far fa-lightbulb"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <label class="label">Image Link</label>
    <div class="control has-icons-left">
      <input class="input" name="image_link" type="text" value="<%=@dream.image_link%>" value="">
      <span class="icon is-small is-left">
        <i class="fas fa-image"></i>
      </span>
    </div>
  </div>


  <div class="field is-grouped">
    <input type="submit" class="button is-link" value='Update'>
    <a href="/dreams/delete/<%=@dream.id%>" class="button is-danger">Delete this Dream</a>

  </div>

</form>
